@model List<YachtsWebApplication.ViewModels.YachtViewModel>

<main>

    <div class="container py-3">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-5 col-lg-5 py-2">
                    <div class="card border border-success ">
                        <img class="card-img-top " src="@Url.Content(item.Image)" alt="Zdjęcie">

                        <div class="card-body">
                            <div class="d-flex justify-content-center flex-column mb-2">
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.Model)</p>
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.CategoryName)</p>
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.PricePerDay) zł za dzień</p>
                            </div>
                            <div class="d-flex justify-content-center align-items-center ">
                                <button onclick="location.href='@Url.Action("Booking", "Home", new {id = item.Id })'" class="btn btn-outline-success px-4 res-btn">Zarezerwuj</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>